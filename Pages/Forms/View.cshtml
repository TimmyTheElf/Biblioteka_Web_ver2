@page
@model Biblioteka_Web_ver2.Pages.Forms.ViewModel
@{
    ViewData["Title"] = "Podgląd dostępnych pozycji";
}
@if (Model.ViewBooks.Count() > 0) {
    <h3>Lista dostępnych książek</h3>
    
    <form method="post" >
        @foreach(var item in Model.ViewBooks)
                { 
                    <a asp-page="/Forms/Details" asp-route-id="@item.Id" class="list-group-item list-group-item-action list-group-item-light list-group-item-action-primary" style="text-align:center">
                        
                                <h4>"@Html.DisplayFor(n => item.Title)"</h4>
                                
                           
                                <h5>@Html.DisplayFor(n => item.Author)</h5>
                        
                        

                    </a>
                }

    </form>
}
